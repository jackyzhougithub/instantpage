<?xml version="1.0" encoding="utf-8"?>
<com.asus.instantpage.view.FuncBarFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res/com.asus.instantpage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    my:drag="@+id/funcbardrag"
    my:funcbar="@+id/editor_func_bar_doodle_layout"
    my:more_content="@+id/funcbar_more_content"
    my:more_hide="@+id/funcbar_more_hide" >

    <FrameLayout
        android:id="@+id/editor_func_bar_doodle_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/black" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/note_kb_d_brush"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/asus_instantpg_pen1_n" />

            <ImageView
                android:id="@+id/note_kb_d_shape"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/quicknote_shape_btn_selector" />

            <ImageView
                android:id="@+id/note_kb_d_eraser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/asus_instantpg_eraser1_n" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/asus_instantpg_banner_sepline" />

            <ImageView
                android:id="@+id/note_kb_undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/quicknote_undo_btn_selector" />

            <ImageView
                android:id="@+id/note_kb_redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/quicknote_redo_btn_selector" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/asus_instantpg_banner_sepline" />

            <ImageView
                android:id="@+id/note_kb_merge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:maxLines="0"
                android:scaleType="center"
                android:src="@drawable/asus_instantpg_merge1_n" />

            <ImageView
                android:id="@+id/note_kb_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/quicknote_btn_selector"
                android:scaleType="center"
                android:src="@drawable/asus_instantpg_freeze_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/funcbar_more_show"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/quicknote_btn_selector"
                    android:src="@drawable/asus_instantpg_more_btn_selector" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/funcbardrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/asus_instantpg_hide_bg"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:scaleType="center"
        android:src="@drawable/asus_instantbg_arrow_t" />

    <ImageView
        android:id="@+id/funcbar_more_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/asus_instantpg_more_btn_hide_selector" />

    <LinearLayout
        android:id="@+id/funcbar_more_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/note_kb_pen_only"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/quicknote_btn_selector2"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/quicknote_penonly_btn_selector" />

        <ImageView
            android:id="@+id/note_kb_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/quicknote_btn_selector2"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/quicknote_share_btn_selector" />

        <ImageView
            android:id="@+id/note_kb_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/quicknote_btn_selector2"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/quicknote_save_btn_selector" />
        <ImageView
            android:id="@+id/note_kb_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/quicknote_btn_selector2"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/quicknote_close_btn_selector" />
    </LinearLayout>

</com.asus.instantpage.view.FuncBarFrameLayout>